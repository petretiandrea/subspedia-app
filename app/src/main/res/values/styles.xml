<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <!-- <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item> -->
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="AppTheme.DetailSeries" parent="AppTheme"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigation" parent="AppTheme">
        <item name="background">@color/secondaryColor</item>
        <item name="itemIconTint">@color/selec_item_nav</item>
        <item name="itemTextColor">@color/selec_item_nav</item>
    </style>

    <style name="HeroTransparent" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
