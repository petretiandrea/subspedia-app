<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.LastSubtitlesFragment">

    <com.andreapetreti.android_utils.ui.LoadingBarMessage
        android:id="@+id/progressMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        app:text="@string/loading" />


    <com.andreapetreti.android_utils.ui.ColorSwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:color1="@color/secondaryColor"
        app:color2="@color/primaryColor">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewSubs"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.andreapetreti.android_utils.ui.ColorSwipeRefreshLayout>
</FrameLayout>